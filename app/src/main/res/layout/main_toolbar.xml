<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        app:popupTheme="@style/AppTheme.PopupOverlay"
        layout_collapseMode="pin"
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mainHeadColor"
        >

        <!--<ImageButton-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:background="@drawable/threebar"-->
            <!--/>-->

        <TextView
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="거래소"
            android:id="@+id/main_toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/main_search_btn"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginRight="15dp"
            android:layout_gravity="end"
            android:background="@drawable/main_toolbar_search"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/main_chat_btn"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginRight="15dp"
            android:layout_gravity="end"
            android:background="@drawable/main_toolbar_chat"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/main_notify_btn"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginRight="15dp"
            android:layout_gravity="end"
            android:background="@drawable/main_toolbar_notify"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </android.support.v7.widget.Toolbar>
    
</LinearLayout>